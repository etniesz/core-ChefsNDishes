@model Dish
<div class="">
    <h1 class="display-4 text-center">Add a Dish</h1>
    <div class="card shadow mx-auto w-50">
        <div class="card-body">
            <form asp-action="CreateDish" asp-controller="Home" method="post">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ChefId" class="form-label"></label>
                    <select asp-for="ChefId" class="form-select">
                        <option selected disabled>--Select a Chef---</option>
                        @foreach (Chef c in ViewBag.AllChefs)
                        {
                            <option value=@c.ChefId>@c.FirstName @c.LastName</option>
                        }
                    </select>
                    <span class="text-danger" asp-validation-for="ChefId"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Calories" class="form-label"></label>
                    <input asp-for="Calories" class="form-control">
                    <span class="text-danger" asp-validation-for="Calories"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Tastiness" class="form-label"></label>
                    <select asp-for="Tastiness" class="form-select">
                        <option selected disabled>---Select Tastiness Level---</option>
                        <option value=1>1</option>
                        <option value=2>2</option>
                        <option value=3>3</option>
                        <option value=4>4</option>
                        <option value=5>5</option>
                    </select>
                    <span class="text-danger" asp-validation-for="Tastiness"></span>
                </div>
                <div class="text-end"><button class="btn btn-primary">Submit</button></div>
            </form>
        </div>
    </div>
</div>