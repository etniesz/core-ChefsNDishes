﻿@{
    ViewData["Title"] = "Home Page";
}

@model List<Chef>
<div class="">
    <h1 class="display-4 text-center">Check out our roster of chefs!</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th># of Dishes</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Chef c in Model)
            {
                <tr>
                    <td>@c.FirstName @c.LastName</td>
                    <td>
                        @((DateTime.Today - c.DOB).Days / 365)
                    </td>

                    <td>@c.AllDishes.Count()</td>
                </tr>
            }
        </tbody>
    </table>
</div>